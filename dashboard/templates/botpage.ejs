<%- include('blocks/header', { bot, user, title: thebot.data.name }) %>
<% const htmlFor = {
  "online": "Online",
  "idle": "Idle",
  "dnd": "DND",
  "offline": "Offline"
}; %>

	<div class="container main-section pt-20">
		<div class="row">
			<div class="col-lg-4 col-sm-12 col-12 text-center detail-part">
				<div class="row image-part m-0" style="background-color: #26272b; color: #fff;">
					<div class="col-lg-12 col-sm-12 col-12 bot-img">
						<div class="">
							<img src="<%= bot.users.get(thebot.id).displayAvatarURL({size:512,format:"png"}) %>" class="border rounded-circle p-1">
						</div>
					</div>
					<div class="col-lg-12 col-sm-12 col-12 bot-name">
						<h2><%= thebot.data.name %></h2>
						<a class="btn btn"><i class="fas fa-arrow-up"></i>  <%= thebot.data.upvotes.toLocaleString() %></a>
                        <span class="<%= bot.users.get(thebot.id).presence.status %>">â€¢ <%= htmlFor[bot.users.get(thebot.id).presence.status] %></span>
						<p><%= thebot.data.library %></p>
					</div>
					<div class="col-lg-12 col-sm-12 col-12 information-button">
						<a href="<%= thebot.data.invite %>" class="btn btn-success w-25">Invite</a>
						<a href="/bot/<%= thebot.data.id %>/vote" class="btn btn-danger w-25">Vote</a>
					</div>
					<div class="col-lg-12 col-sm-12 col-12 bot-detail text-left p-2">
						<p style="word-break: break-word; color: #fff;"><%= thebot.data.shortDesc %><p style="color: #fff;">Bot Prefix: <span><code><%= thebot.data.prefix %></code></span></p>

					</div>
					<div class="col-lg-12 col-sm-12 col-12 icon-section">
							<% if(thebot.data.website !== "none") {%>
                    <button  onclick="window.location.href = '<%= thebot.data.website %>';" type="button" class="btn btn-secondary">Visit Website</button>
					<% }%>
					<button  onclick="window.location.href = '<%= thebot.data.server %>';" type="button" class="btn btn-secondary">Join Server</button>
                                            <p></p>
                    <button type="button"  onclick="window.location.href = '/report/<%= thebot.data.id %>';" class="btn btn-dark">Report</button>
						<a class="btn btn-success"><span></span><%= thebot.data.serverCount %> Servers</a>
                        <a class="btn btn-success"><span></span><%= thebot.data.shardCount %> Shard(s)</a>
                        <p></p>
						<a ><i class="fa fa-tag" aria-hidden="true"></i></a>
						<% for (var i = 0; i < thebot.data.tags.length; i++) {
							var tag = thebot.data.tags[i]
							%>
						<a href="/tags/<%=tag%>"><%=tag%></a>

						<%  }; %>
							 <p></p>
							 <% if(user && thebot.data.mainOwner == user.id || user && thebot.data.owners.includes(user.id)) { %>
                    <a class="btn btn-danger" href="/bot/<%= thebot.data.id %>/delete"><span class="fa fa-trash"></span> Delete</a>
                    <a class="btn btn-primary" href="/bot/<%= thebot.data.id %>/edit"><span class="fa fa-pencil"></span>Edit</a>
                <% }; %>
</div>
				</div>
			</div>
			<div class="col-lg-8 detail-part">
				<div class="container">
          <div class="row">

            <div class="col-lg-12" style="background-color: #26272b; color: #fff;">
              <div class="tab-content mt-4" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">

                        <div class="col-lg-12 mt-2 about-detail">
														<h5 class="text-primary mb-1">Developers:</h5>
														<span onclick="window.location.href ='/profile/<%= thebot.data.mainOwner %>'" class="devloper"><kbd><%= bot.users.get(thebot.data.mainOwner).tag %></kbd></span>
														<% for (var i = 0; i < thebot.data.owners.length; i++) {
															var owner = bot.users.get(thebot.data.owners[i]).tag || "Unknown#0000"
														%>
															<span onclick="window.location.href ='/profile/<%= thebot.data.owners[i] %>'" class="devloper"><kbd><%= owner %></kbd></span>
															<%  }; %>
                            <h5>Description:</h5>
                            <span style="width: auto; max-width: 100px!important; word-break: break-word;"><%- thebot.data.longDesc %></span>
                        </div>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
			</div>
		</div>
	</div>
<body>
</html>
